<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  
  <div class="card-body">
    <h5 class="card-title" data-live-text-setting="section.feature-columns.block.feature-columns-0.title/escape">{{section.settings.card_text}}</h5>
    <p class="card-text" data-live-text-setting="section.feature-columns.block.feature-columns-0.text">{{section.settings.card_textarea}}</p>
    <a href="{{section.settings.button_link}}" class="btn btn-primary">{{section.settings.btn_label}}</a>
  </div>
  
</div>

<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
</style>  
{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
        {
           "type": "text",
           "label": "Heading",
           "default": "Collection",
           "id": "card_text"
        },
        {
           "type": "textarea",
           "id": "card_textarea",
           "label": "Message",
           "default": "No matter how big or small your dinning room is, we are confidence you will pick one you love."
        },
        {
           "type": "url",
           "id": "button_link",
           "label": "Button link"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button text"
        },
        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        }
    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}
{% endschema %}

